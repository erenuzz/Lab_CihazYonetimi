@model IQueryable<RezervasyonDetaylari>
@{
    ViewData["Title"] = "RezervasyonDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .vertical-line {
        border-left: 1px solid black;
        height: 300px; 
        margin: 0 10px; 
    }

</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa fa-ticket"></i> Rezervasyon Detayı </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                     
                         @foreach (var item in Model)
                        {
                            <div class="col-md-12">
                                <img class="rounded-circle mt-3 mb-3" width="200px;" height="200px;" alt="avatar1" src="@item.CihazGorseli" /><br>                            

                            <label><b>Rezervasyonu Alan Kullanıcı:</b>  @item.KullaniciAdi</label><br>
                             <div class="dropdown-divider"></div>
                             <label><b>Cihaz Adı:</b>  @item.CihazAdi</label><br>
                                <div class="dropdown-divider"></div>
                             <label><b>Rezervasyon Başlangıç Tarihi:</b>  @item.RezervasyonBaslangicTarihi</label><br>
                                <div class="dropdown-divider"></div>
                                   
                             <label><b>Rezervasyon Bitiş Tarihi:</b>  @item.RezervasyonBitisTarihi</label><br>
                                <div class="dropdown-divider"></div>
                           <label><b>Cihaz Saatlik Fiyatı</b> @item.CihazSaatlikFiyat ₺</label>
                           <div class="dropdown-divider"></div>
                                <label><b>İndirim Yüzdesi:</b>  @item.IndirimTutari %</label><br>
                                <div class="dropdown-divider"></div>
                                <label><b>İndirim Tutarı:</b>  @item.IndirimliFiyat ₺</label><br>
                                <div class="dropdown-divider"></div>
                             <label><b>Toplam Tutar:</b>  @item.ToplamFiyat ₺</label><br>
                                <div class="dropdown-divider"></div>
                            </div>
                            <div class="dropdown-divider"></div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


